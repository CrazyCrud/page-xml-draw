            "oneOf": [
                {
                    "$ref": "#/Drawing/HexColor"
                },
                {
                    "$ref": "#/Drawing/WebColor"
                }
            ]
        },
        "EdgeColor": {
            "description": "Color to draw the polygon edges with",
            "oneOf": [
                {
